{
    "overrides": [
        {
            "files": ["**/*{.json,rc}"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["**/*.{js,jsx,ts,tsx}"],
            "options": {
                "singleQuote": false,
                "trailingComma": "es5",
                "semi": true,
                "tabWidth": 2
            }
        },
        {
            "files": ["**/*.{html,css}"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
